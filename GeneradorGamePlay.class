    //Método para generar enemigos
    public Personaje[] generarEnemigos(){
        enemigos[0] = new Personaje("OGRO",300,50,"Un cuadro a la vez","Golpea con su bastón a un punto en un rango de un cuadro a su alrededor",false,"=og=");
        enemigos[1] = new Personaje("GÁRGOLA",150,100,"Hasta tres cuadros a la vez","Lanza una bola de fuego en una línea en un rango de dos cuadros, que impacta con el primer personaje del jugador que encuentre",true,"=ga=");
