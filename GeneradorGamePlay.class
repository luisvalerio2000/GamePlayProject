    //Método para generar un enemigo aleatorio
    public Personaje generarEnemigoAleatorio(){
        Random ran = new Random();
        Personaje[] enemigoAleatorio = generarEnemigos();
        Personaje enemigo;
        int aleatorio=0;
        aleatorio = ran.nextInt(46);
        
        if (aleatorio>=0 && aleatorio<10) {
            enemigo=enemigoAleatorio[0];
        }else if (aleatorio>=10 && aleatorio<20) {
            enemigo=enemigoAleatorio[1];
        }else if (aleatorio>=20 && aleatorio<30) {
            enemigo=enemigoAleatorio[4];
        }else if (aleatorio>=30 && aleatorio<40) {
            enemigo=enemigoAleatorio[3];
        }else if (aleatorio>=40 && aleatorio<46) {
            enemigo=enemigoAleatorio[4];
        }else{
            enemigo=enemigoAleatorio[0];
        }
        
        return enemigo;
    }
    
